<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewEmployeeActivity"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"

    android:background="#fff"

    android:paddingRight="20dp"

    android:paddingLeft="20dp"

    android:paddingTop="10dp"

    android:paddingBottom="10dp">
    <EditText
        android:id="@+id/name_emp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textStyle="italic"
        android:textColor="#000"
        android:textSize="18dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="your name"
        android:background="#FFC9A9A9"



        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="4dp"

        />
    <EditText
        android:id="@+id/number_emp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:hint="Your number:"
        android:textStyle="italic"
        android:textColor="#000"
        android:textSize="18dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#FFC9A9A9"




        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="4dp"



        />
    <EditText
        android:id="@+id/j_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:hint="Joining Date :"
        android:textStyle="italic"
        android:textColor="#000"
        android:textSize="18dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#FFC9A9A9"



        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="4dp"
        />
    <EditText
        android:id="@+id/Governorate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Governorate:"
        android:textStyle="italic"
        android:inputType="text"
        android:textColor="#000"
        android:textSize="18dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#FFC9A9A9"

        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="4dp"
        />
    <EditText
        android:id="@+id/sec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="section:"
        android:inputType="text"
        android:textStyle="italic"
        android:textColor="#000"
        android:textSize="18dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#FFC9A9A9"



        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="4dp"

        />
    <EditText
        android:id="@+id/regest_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Reason For Resignation :"
        android:textStyle="italic"
        android:textColor="#000"
        android:textSize="18dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#FFC9A9A9"


        />
    <Button
        android:id="@+id/regs_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="registration"
        android:textStyle="italic"
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_margin="20dp"
        android:background="@drawable/singin_back"
        android:layout_gravity="center"


        />



</LinearLayout>